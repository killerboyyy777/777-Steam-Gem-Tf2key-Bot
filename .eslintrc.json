{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "max-len": [
            "error",
            {
                "code": 100,
                "ignoreComments": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true,
                "ignoreUrls": true
            }
        ],
        "prefer-destructuring": "off",
        "no-return-assign": "off",
        "no-await-in-loop": "off",
        "no-loop-func": "off",
        "no-param-reassign": "off",
        "no-plusplus": "off",
        "consistent-return": "off",
        "no-promise-executor-return": "off"
    }
}